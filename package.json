{
  "name": "hello-containerd-nodejs",
  "version": "1.0.0",
  "description": "Simple node.js app for containerd",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest --coverage"
  },
  "dependencies": {
    "express": "^5.2.1",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}