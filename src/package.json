{
  "name": "hello-containerd-nodejs",
  "version": "1.0.0",
  "description": "Simple node.js app for containerd",
  "main": "app.js",
  "dependencies": {
    "express": "^5.2.1",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "scripts": {
    "start": "node app.js",
    "test": "jest --coverage"
  }
}